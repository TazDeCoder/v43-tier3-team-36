{
  "name": "marvel-collector",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --parallel",
    "commit": "cz",
    "dev": "turbo run dev --parallel",
    "dev:backend": "turbo run dev --filter backend",
    "dev:frontend": "turbo run dev --filter frontend",
    "postinstall": "husky install",
    "lint": "turbo run lint --parallel",
    "start": "turbo run start --parallel",
    "start:backend": "turbo run start --filter backend",
    "start:frontend": "turbo run start --filter frontend",
    "test": "turbo run test --parallel",
    "test:backend": "turbo run test --filter backend",
    "test:frontend": "turbo run test --filter frontend"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-react-hooks": "^1.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-testing-library": "^5.10.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "turbo": "^1.10.13",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.4.1"
}
